{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}-
	{{ contact.subject }}
{% endblock %}


{% block body %}
	<div class="container mt-5 mb-5 body-height">
		<h1>Messagerie</h1>
		<div class="card mb-3 mt-4 col-md-6 ms-2 me-2">
			<h3 class="card-header">{{ contact.subject }}</h3>
			<div class="card-body mb-3">
				<h5 class="card-text text-center fw-bold mt-4">INFORMATION DU CONTACT</h5>
			</div>
			<div class="information wih">
				<ul class="list-group list-group-flush width">
					<li class="list-group-item pt-3 pb-3">
						<i class="fa-solid fa-user"></i>
						<span class="fw-bold">
							&thinsp;Nom :
						</span>
						&thinsp;{{ contact.name }}
					</li>
					<li class="list-group-item pb-3 pt-3">
						<i class="fa fa-phone"></i>
						<span class="fw-bold">
							&thinsp; Téléphone :
						</span>
						&thinsp;{{ contact.phone }}
					</li>
				</ul>
				<ul class="list-group list-group-flush width">
					<li class="list-group-item pb-3 pt-3">
						<i class="fa-regular fa-user"></i>
						<span class="fw-bold">
							&thinsp;Prénom :
						</span>
						&thinsp;{{ contact.firstName }}
					</li>
					<li class="list-group-item pb-3 pt-3">
						<i class="fa fa-envelope"></i>
						<span class="fw-bold">
							&thinsp;E-mail :
						</span>
						&thinsp;{{ contact.email}}
					</li>
				</ul>
			</div>

			<ul class="list-group list-group-flush">
				<li class="list-group-item pt-3 pb-3">
					<i class="fa fa-location-dot"></i>
					<span class="fw-bold">
						&thinsp; Adresse :
					</span>
					&thinsp;{{ contact.address }}
				</li>
			</ul>


			<div class="card-body mt-3">
				<h5 class="card-text text-center fw-bold">MESSAGE</h5>
			</div>
			<div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item mt-4 pb-4">
					{{ contact.message }}
				</li>
				<li class="list-group-item"></li>
			</ul>
			</div>

			


			<div class="d-flex justify-content-evenly m-4">
				<a href="{{ path('contact.index') }}" class="btn btn-primary">Retour aux message</a>
				<a href="{{ path('contact.delete', { id: contact.id }) }}" class="btn btn-danger ">Supprimer</a>
			</div>
		</div>
	</div>
{% endblock %}
