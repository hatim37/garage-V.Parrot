{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}- Modifier une option
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="mt-4">Modification d'une option</h1>
		<div class="row g-3">
			{{ form_start(form) }}

			<div class="form-group col-md-6">
				{{ form_label(form.name) }}
				{{ form_widget(form.name) }}
				<div class="form-error">
					{{ form_errors(form.name) }}
				</div>
			</div>

			<div>
				<div class="form-group col-md-6">
					{{ form_label(form.submit) }}
					{{ form_widget(form.submit) }}
				</div>
				<div class="d-flex justify-content-evenly m-4">
					<a href="{{ path('equipment.index') }}" class="btn btn-primary">Retour Ã  la liste</a>
				</div>
			</div>

			{{ form_rest(form) }}
		</div>
	</div>
{% endblock %}
