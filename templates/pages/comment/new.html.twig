{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}- Nouvelle annonce
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
{% endblock %}

{% block body %}
	<div class="container body-height">

		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-3">
				{{ message }}</div>
		{% endfor %}

		<div class="row g-3">
			{{ form_start(form) }}


			<div class="col-lg-4 col-md-8">

				<h4 class="mt-6">Poster un commentaire :</h4>

				<div class="form-group ">
					{{ form_label(form.name) }}
					{{ form_widget(form.name) }}
					<div class="form-error">
						{{ form_errors(form.name) }}
					</div>
				</div>

				<div class="form-group ">
					{{ form_label(form.message) }}
					{{ form_widget(form.message) }}
					<div class="form-error">
						{{ form_errors(form.message) }}
					</div>
				</div>


				<h6 class="mt-4">Votre note :</h6>
				<div class="stars">
					<i class="lar la-star" data-value="1"></i>
					<i class="lar la-star" data-value="2"></i>
					<i class="lar la-star" data-value="3"></i>
					<i class="lar la-star" data-value="4"></i>
					<i class="lar la-star" data-value="5"></i>
					<div class="form-error">
						{{ form_errors(form.note) }}
					</div>
				</div>

				<div class="form-group isApproved">
					{{ form_label(form.note) }}
					{{ form_widget(form.note) }}
					<div class="form-error">
						{{ form_errors(form.note) }}
					</div>
				</div>


				<div class="isApproved ">
					{{ form_row(form.isApproved, { 'attr':{'class':'isApproved'} }) }}
				</div>


				<h6 class="mb-4 mt-4">Image de profil en option :</h6>

				<div class="form-group  mt-4 mb-4">
					{{ form_label(form.images) }}
					{{ form_widget(form.images) }}
					<div class="form-error">
						{{ form_errors(form.images) }}
					</div>
				</div>
			</div>

			<div class="col-md-8 d-flex">
				<div class="form-group mb-3">
					{{ form_label(form.submit) }}
					{{ form_widget(form.submit) }}
				</div>
				
				<div class="form-group mb-3 flex align-items-end">
					<a href="{{ path('home.index') }}" class=" btn btn-primary ms-3 ms-lg-5 mt-4">Retour Ã  la page d'accueil</a>
				</div>
			</div>
			</div>

		</div>
		{{ form_rest(form) }}
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js'></script>
{% endblock %}
