{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}- les services
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Les services</h1>

       
		{% if not service.items is same as ([]) %}

			

			{% for message in app.flashes('success') %}
				<div class="alert alert-success mt-3">
					{{ message }}</div>
			{% endfor %}

			<div class="d-flex justify-content-between mt-4 ">
				<h4>Il y a {{ service.getTotalItemCount }} services au total</h4>
				<a href="{{ path('service.new') }}" class="btn btn-primary btn-size-new">Ajouter un service</a>
			</div>

			<div class="table-responsive">
				<table class="table table-active mt-4 table-texte-size">
					<thead>
						<tr>
							<th scope="col">Numéro</th>
							<th scope="col">Nom</th>
							<th scope="col">Edition</th>
							<th scope="col">Suppression</th>
						</tr>
					</thead>
					<tbody>
						{% for service in service %}
							<tr class="table-active mt-4">
								<th scope="row">{{ service.id }}</th>
								<td>{{ service.name }}</td>
								<td>
									<a href="{{ path('service.edit', { id: service.id }) }}" class="btn btn-primary btn-size">Modifier</a>
								</td>
								<td>
									<a href="{{ path('service.delete', { id: service.id }) }}" class="btn btn-danger btn-size">Supprimer</a>
								</td>
                                
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
			<div class="navigation d-flex justify-content-center mt-4">
				{{ knp_pagination_render(service) }}
			</div>
		{% else %}
			<h4>Aucun service n'a été trouvé</h4>
  
		{% endif %}
	</div>
{% endblock %}
