{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}- les informations
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="hourly">Les informations du garage</h1>
		
		{% if not information.items is same as ([]) %}

			{% for message in app.flashes('success') %}
				<div class="alert alert-success mt-3">
					{{ message }}</div>
			{% endfor %}

			<div class="table-responsive">
				<table class="table table-active mt-4 table-texte-size">
					<thead>
						<tr>
							<th scope="col">Nom</th>
                            <th scope="col">Adresse</th>
							<th scope="col">Email</th>
							<th scope="col">Téléphone</th>
                            <th scope="col">Edition</th>
                           
						</tr>
					</thead>
					<tbody>
						{% for information in information %}
							<tr class="table-active mt-4">
								<td>{{ information.name }}</td>
								<td>{{ information.street }} {{ information.city }}</td>
								<td>{{ information.email }}</td>
                                <td>{{ information.phone }}</td>
								<td>
									<a href="{{ path('information.edit', { id: information.id }) }}" class="btn btn-primary btn-size">Modifier</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>

		{% else %}
			<h4>Aucune information n'a été trouvé</h4>
            <a href="{{ path('hourly.new') }}" class="btn btn-info btn-size-new">Créer une information</a>
		{% endif %}
	</div>
{% endblock %}