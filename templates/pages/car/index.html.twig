{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}- Nos voitures
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="mt-4">Nos voitures</h1>
		<a href="{{ path('car.new') }}" class="btn btn-primary mb-4">Ajouter un véhicule</a>


		<form class="flex mt-4" action="" method="get" id="filters">
			{{ form_start(form) }}

			<div>
				<h5>
					<i class="fa fa-gauge-high"></i>
					&thinsp; Kilomètrage</h5>
				<div class="flex marge mt-4">
					<div class="input-group marge-form" id="valide">
						{{ form_label(form.kilometerMin) }}
						{{ form_widget(form.kilometerMin) }}
					</div>

					<div class="input-group marge-form" id="valide">
						{{ form_label(form.kilometerMax) }}
						{{ form_widget(form.kilometerMax) }}
					</div>
				</div>
			</div>

			<div>
				<h5>
					<i class="fa fa-calendar"></i>
					&thinsp; Année</h5>
				<div class="flex marge mt-4">
					<div class="input-group marge-form" id="valide">
						{{ form_label(form.yearMin) }}
						{{ form_widget(form.yearMin) }}
					</div>

					<div class="input-group marge-form" id="valide">
						{{ form_label(form.yearMax) }}
						{{ form_widget(form.yearMax) }}
					</div>
				</div>
			</div>

			<div>
				<h5>
					<i class="fa fa-euro"></i>
					&thinsp; Prix</h5>
				<div class="flex marge-fin mt-4">
					<div class="input-group marge-form" id="valide">
						{{ form_label(form.priceMin) }}
						{{ form_widget(form.priceMin) }}
					</div>

					<div class="input-group marge-form" id="valide">
						{{ form_label(form.priceMax) }}
						{{ form_widget(form.priceMax) }}
					</div>
				</div>
			</div>

			 <div class="form-group case-recherche">
            {{ form_label(form.submit) }}
            {{ form_widget(form.submit) }}
        </div>


		</form>


		<div id="content">
			<div class="input-group sortBy ">
				{{ form_widget(form.sortBy) }}
			</div>
			{{ form_rest(form) }}
			{% include "pages/car/_content.html.twig" %}
		</div>
	</div>


</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{asset('assets/js/filters.js')}}"></script>
{% endblock %}
